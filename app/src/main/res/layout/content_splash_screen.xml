<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingBottom="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.bvbv.dogtraining.SplashScreen"
    tools:showIn="@layout/activity_splash_screen">

    <ImageView
        android:id="@+id/imageViewSplash"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"/>

    <TextView
        android:id="@+id/t_dog_training"
        android:layout_width="wrap_content"
        android:layout_height="61dp"
        android:layout_below="@+id/imageViewSplash"
        android:layout_centerHorizontal="true"
        android:text="@string/dog_training"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#E74C3C"
        android:textSize="40dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/t_dog_training"
        android:layout_alignRight="@+id/t_dog_training"
        android:layout_below="@+id/t_dog_training"
        android:text="by BV"
        android:textAppearance="?android:attr/textAppearanceSmall" />
</RelativeLayout>
