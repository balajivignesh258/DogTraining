<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="10dp"
        tools:context="com.bvbv.dogtraining.Preparing">

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="4dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Preparing"
                android:textAlignment="center"
                android:paddingTop="10dp"
                android:id="@+id/sub_activity_heading"
                android:layout_row="3"
                android:layout_column="10"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_text_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_view"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/card_view_buttons">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="sample text"
                android:id="@+id/a_t_preparing"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="10dp"
                android:layout_row="5"
                android:layout_column="10"
                android:maxLines = "1000"
                android:scrollbars = "vertical"/>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:padding="10dp"
                tools:context="com.bvbv.dogtraining.Preparing">
                <Button
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:text=">"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="#FFFF"
                    android:background="@drawable/button_next"
                    android:id="@+id/nav_next"
                    android:onClick="nextPage"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <Button
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:text="&lt;"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#FFFF"
                    android:background="@drawable/button_prev"
                    android:id="@+id/nav_prev"
                    android:onClick="prevPage"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <Button
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:text="Home"
                    android:onClick="goToHome"
                    android:textSize="20dp"
                    android:textColor="#FFFF"
                    android:background="@drawable/button_home"
                    android:id="@+id/b_home"
                    android:layout_toLeftOf="@id/nav_next"
                    android:layout_toRightOf="@id/nav_prev"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

</RelativeLayout>
